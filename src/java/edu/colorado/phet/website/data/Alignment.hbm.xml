<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="edu.colorado.phet.website.data.Alignment" table="alignment">
        <cache usage="nonstrict-read-write"/>
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="url"/>
        <property name="framework">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">edu.colorado.phet.website.data.Alignment.Framework</param>

                <!-- force it to store strings instead of ints -->
                <param name="type">12</param>
            </type>
        </property>
    </class>
</hibernate-mapping>